{
    "name": "Slideshow",
    "version": "1.0.0",
    "description": "A simple image Slideshow using react+redux",
    "main": "index.js",
    "repository": "https://github.com/brianchristensen/Slideshow",
    "author": "Brian Christensen",
    "license": "MIT",
    "scripts": {
        "start": "export NODE_ENV=development && webpack-dev-server --history-api-fallback --progress --colors --hot --config ./webpack.config.js --port 3000",
        "test": "jest",
        "build": "export NODE_ENV=production && webpack --optimize-minimize --progress --colors --config ./webpack.config.js"
    },
    "jest": {
        "transform": {
            ".*": "<rootDir>/node_modules/babel-jest"
        },
        "moduleFileExtensions": [
            "js",
            "jsx",
            "json",
            "es6"
        ],
        "verbose": true,
        "setupTestFrameworkScriptFile": "<rootDir>/test/init.js"
    },
    "devDependencies": {
        "babel-core": "^6.24.1",
        "babel-jest": "^19.0.0",
        "babel-loader": "^7.0.0",
        "babel-plugin-module-resolver": "^2.7.0",
        "babel-preset-env": "^1.4.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "clean-webpack-plugin": "^0.1.16",
        "es6-promise": "^4.1.0",
        "html-webpack-plugin": "^2.28.0",
        "isomorphic-fetch": "^2.2.1",
        "jest": "^19.0.2",
        "redux-devtools": "^3.4.0",
        "webpack": "^2.4.1",
        "webpack-dev-server": "^2.4.5"
    },
    "dependencies": {
        "babel-polyfill": "^6.23.0",
        "immutable": "^3.8.1",
        "prop-types": "^15.5.8",
        "react": "^15.5.4",
        "react-dom": "^15.5.4",
        "react-redux": "^5.0.4",
        "react-router-dom": "^4.1.1",
        "redux": "^3.6.0",
        "redux-thunk": "^2.2.0",
        "styled-components": "^1.4.5"
    }
}
